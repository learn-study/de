<%= form_for(@cast, :html => {:class => 'form-horizontal'}) do |f| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
    <% if @cast.errors.present? %>
      <div class="alert alert-danger">
        <%= alert %>
        <ul>
          <% @cast.errors.full_messages.each do |full_message| %>
            <li>
              <%= full_message %>
            </li>
          <% end %> 
        </ul>
      </div>
    <% end %>
    </div>
  </div>
  
    <div class="form-group">
      <%= f.label :名前,class: "col-xs-2 control-label" %>
      <div class="col-xs-10"><%= f.text_field :name, autofocus: true, class: "form-control" %></div>
    </div>
        
    <div class="form-group">
          <%= f.label :年齢, class: "col-xs-2 control-label" %>
          <div class="col-xs-10"><%= f.text_field  :age, autofocus: true, class: "form-control" %></div>
    </div>
        
    <div class="form-group">
          <%= f.label :身長, class: "col-xs-2 control-label" %>
          <div class="col-xs-10"><%= f.text_field  :tall, autofocus: true, class: "form-control" %></div>
    </div>
        
    <div class="form-group">
          <%= f.label :b, class: "col-xs-2 control-label" %>
          <div class="col-xs-10"><%= f.text_field  :b, autofocus: true, class: "form-control" %></div>
    </div>
        
    <div class="form-group">
          <%= f.label :cup, class: "col-xs-2 control-label" %>
          <div class="col-xs-10"><%= f.text_field  :cup, autofocus: true, class: "form-control" %></div>
    </div>

    <div class="form-group">
          <%= f.label :w, class: "col-xs-2 control-label" %>
          <div class="col-xs-10"><%= f.text_field  :w, class: "form-control" %></div>
    </div>

    <div class="form-group">
          <%= f.label :h, class: "col-xs-2 control-label" %>
          <div class="col-xs-10"><%= f.text_field  :hip, class: "form-control" %></div>
    </div>
        
    <div class="form-group">
      <%= f.label :message, class: "col-xs-2 control-label" %>
      <div class="col-xs-10"><%= f.text_area :message, class: "form-control" %></div>
    </div>
        
      <div class="form-group">
          <%= f.label :comment, class: "col-xs-2 control-label" %>
          <div class="col-xs-10"><%= f.text_area :comment, class: "form-control" %></div>
      </div>


  <div class="form-group">
    <div class="col-xs-3 col-xs-offset-3">
        <div class="actions">
          <%= f.submit "登録", class: "btn btn-lg btn-primary" %>
        </div>
    </div>
  </div>
<% end %>