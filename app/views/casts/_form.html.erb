<%= form_for(@cast) do |f| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
    <% if @cast.errors.present? %>
      <div class="alert alert-danger">
        <%= alert %>
        <ul>
          <% @cast.errors.full_messages.each do |full_message| %>
            <li>
              <%= full_message %>
            </li>
          <% end %> 
        </ul>
      </div>
    <% end %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="field">
          <%= f.label :名前,class: "control-label" %>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>
        
        <div class="field">
          <%= f.label :年齢, class: "control-label" %>
          <%= f.text_field  :age, autofocus: true, class: "form-control" %>
        </div>
        
        <div class="field">
          <%= f.label :身長, class: "control-label" %>
          <%= f.text_field  :tall, autofocus: true, class: "form-control" %>
        </div>
        
        <div class="field">
          <%= f.label :b, class: "control-label" %>
          <%= f.text_field  :b, autofocus: true, class: "form-control" %>
        </div>
        
        <div class="field">
          <%= f.label :cup, class: "control-label" %>
          <%= f.text_field  :cup, autofocus: true, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :w, class: "control-label" %>
          <%= f.text_field  :w, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :h, class: "control-label" %>
          <%= f.text_field  :hip, class: "form-control" %>
        </div>
        
        <div class="field">
          <%= f.label :message, class: "control-label" %>
          <%= f.text_area :message %>
        </div>
        
        <div class="field">
          <%= f.label :comment, class: "control-label" %>
          <%= f.text_area :comment %>
        </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3 col-md-offset-3">
        <div class="actions">
          <%= f.submit "新人登録", class: "btn btn-lg btn-primary" %>
        </div>
    </div>
  </div>
<% end %>